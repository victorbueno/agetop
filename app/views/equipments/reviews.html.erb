<div class="grid_12">
	<div class="inner">
		<h1>Estudos técnicos de instalação</h1>
		
		<table class="listas">
			<tr>
				<th>Nome do Equipamento</th>
				<th>Endereço</th>
				<th>Bairro</th>
				<th>Status</th>
				<th class="center">Visualizar PDF</th>
			</tr>
			
			<% 
			@equips.each do |equip| 
				review = equip.reviews.first
			%>
			<tr>
				<td><%= equip.name %></td>
				<td><%= equip.address %></td>
				<td><%= equip.district %></td>
				<td><%= equip.active ? "Ativo" : "Desativado" %></td>
				<td class="center"><%= link_to image_tag('pdf.png'), review.pdf.url, :target => "_blank" unless review.nil? %></td>
			</tr>
			<% end %>
		</table>
		
		<%= paginate @equips %>
	</div>
</div>