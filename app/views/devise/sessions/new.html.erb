<div class="grid_12">
<h2>Fazer login</h2>

<% flash.each do |key, msg| %>
	<div class="alert-message <%= key %>">
		<%= msg %>
	</div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="clearfix">
		<%= f.label :email %>
		<div class="input">
			<%= f.email_field :email %>
		</div>
	</div>
	
	<div class="clearfix">
		<%= f.label :password %>
		<div class="input">
			<%= f.password_field :password %>
		</div>
	</div>

	<div class="actions">
		<%= f.submit 'Entrar', :class => 'btn primary' %>
	</div>

<% end %>
</div>